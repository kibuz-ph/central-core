model User {
  id             String    @id @default(uuid())
  username       String
  role           Role
  document       String
  firstName      String
  secondName     String?
  lastName       String
  secondLastName String?
  birthday       DateTime
  email          String    @unique()
  phone          String    @unique()
  password       String
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
