#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get the commit message
commit_msg=$(cat "$1")

# Define the pattern: [type]: [subject]
# - All lowercase
# - Subject should start with a verb
pattern="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert): [a-z].*$"

# Check if commit message matches the pattern
if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo ""
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow the format: [type]: [subject]"
  echo ""
  echo "Rules:"
  echo "  - All lowercase"
  echo "  - Subject must start with a verb"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo ""
  echo "Example: feat: add user authentication"
  echo "Example: fix: resolve database connection issue"
  echo ""
  exit 1
fi
